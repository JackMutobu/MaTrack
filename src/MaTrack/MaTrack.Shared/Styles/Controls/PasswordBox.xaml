<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaTrack.Shared.Styles.Controls">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Application/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="PasswordBox1" TargetType="PasswordBox">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Padding" Value="5,10"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Background" Value="{StaticResource WhiteCustomBrush}"/>
    </Style>
</ResourceDictionary>
