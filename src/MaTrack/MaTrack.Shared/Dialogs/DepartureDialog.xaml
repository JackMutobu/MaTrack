<ContentDialog
    x:Class="MaTrack.Shared.Dialogs.DepartureDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MaTrack.Shared.Dialogs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Departure"
    PrimaryButtonText="Confirm"
    CloseButtonText="Cancel"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <StackPanel Spacing="10">
        <RadioButton GroupName="State" x:Name="btnDeparture" IsChecked="True" Content="Add to departure"/>
        <RadioButton GroupName="State" x:Name="btnWindUp" Content="Wind Up"/>
        <TextBox x:Name="txtRevenue" BorderThickness="1" BorderBrush="{StaticResource MainDarkBrush}" PlaceholderText="Revenue" Style="{StaticResource TextBox1}" />
    </StackPanel>
</ContentDialog>
