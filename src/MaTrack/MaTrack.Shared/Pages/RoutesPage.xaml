            </Button>
            <Button x:Name="btnAddRoute" Margin="2.5,0" Height="40" Width="50" Style="{StaticResource BtnPrimary}"  Grid.Row="1" Grid.Column="2">
                <Path Data="M13.55896,0L18.461914,0 18.461914,13.557983 32,13.557983 32,18.481018 18.5,18.481018 18.5,32 13.55896,32 13.55896,18.481018 0,18.481018 0,13.557983 13.55896,13.557983z" Stretch="Uniform" Fill="#FFFFFFFF"  Height="20" Margin="0,0,0,0" RenderTransformOrigin="0.5,0.5"/>
            </Button>
        </Grid>
        <Grid Grid.Row="2" Padding="5" >
            <ListView x:Name="listRoutes">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" Background="{StaticResource VioletPrimaryBrush}" Height="80">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock Text="{Binding RouteName}" Grid.RowSpan="2" Grid.Column="1" FontSize="18" Foreground="{StaticResource WhiteCustomBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="" Grid.Row="1" Grid.Column="1"  FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center" Style="{StaticResource TextBlock1}"/>
                            <TextBlock Text="" FontSize="18" Grid.Column="2" Foreground="{StaticResource WhiteCustomBrush}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Text="" Grid.Row="1" Grid.Column="2" Style="{StaticResource TextBlock1}" VerticalAlignment="Center"  HorizontalAlignment="Center"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView> 
        </Grid>
    </Grid>
</Page>
